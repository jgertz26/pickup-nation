<div class="page-content small-11 small-centered columns">

  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
      <div class="field small-8 left medium-4 columns">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field small-8 left medium-4 columns">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "button success small radius" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
