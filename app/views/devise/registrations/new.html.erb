<div class="page-content small-11 small-centered columns">

  <div class="row">
    <div class="new-user small-10 medium-6 columns">

      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email %>
        </div>

        <div class="field">
          <label for="user_password">Password <em>(8 characters minimum)</em></label><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :avatar, "Avatar" %><br />
          <%= f.file_field :avatar%>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "button small success radius" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
