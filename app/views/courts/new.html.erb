<div class="page-content small-11 small-centered columns">

  <p id="map-error" hidden>
    Address not recognized. Try again!
  </p>

  <h1>Submit New Court</h1>

  <%= form_for @court do |f| %>

      <div class="court-name-field">
        <%= f.label :name, "Name of court" %>
        <%= f.text_field :name %>
      </div>

      <div class="court-street-address-field">
        <%= f.label :street_address %>
        <%= f.text_field :street_address %>
      </div>

      <div class="court-city-field">
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>

      <div class="court-state-field">
        <%= f.label :state %>
        <%= f.text_field :state %>
      </div>

      <div class="court-zip-field">
        <%= f.label :zip, "Zip Code" %>
        <%= f.text_field :zip %>
      </div>

      <br>

      <div class="court-setting-field">
        <%= f.label :setting %>
        <%= f.select(:setting,
            ['Outdoor without lights', 'Outdoor with lights', 'Indoor']) %>
      </div>

      <div class="court-hoop-count-field">
        <%= f.label :hoop_count, "Number of hoops" %>
        <div class="court-hoop-count-input">
          <%= f.text_field :hoop_count %>
        </div>
      </div>

      <div class="court-hours-field">
        <%= f.label :hours,
        "Hours of Operation (if outdoor, include when lights go out)" %>
        <div class="court-hours-input">
          <%= f.text_field :hours, placeholder: "Optional" %>
        </div>
      </div>


      <%= f.submit "Add Court", id: "show-map-button", class: "button radius" %>

  <% end %>

  <div id="map-and-button" hidden>
    <br>
    <h5>Click on the map to pinpoint the court's exact location!</h5>
    <br>
    <div id="createMap"></div>
    <br>

    <div id="map-buttons" hidden>
      <%= link_to "Submit", "#",
          id: "submit-court-button",
          class: "button success radius"%>

      <%= link_to "Wrong address?", "#", id: "wrong-address-button" %>
    </div>

  </div>
</div>
