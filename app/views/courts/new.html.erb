<div id="page-content" class="small-11 small-centered columns">

  <p id="map-error" hidden>
    Address not recognized. Try again!
  </p>

  <h1>Submit New Court</h1>

  <%= form_for @court do |f| %>

    <%= f.label :name, "Name of court" %>
    <%= f.text_field :name %>

    <%= f.label :street_address %>
    <%= f.text_field :street_address %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :zip, "Zip Code" %>
    <%= f.text_field :zip %>

    <%= f.label :hoop_count, "Number of hoops" %>
    <%= f.text_field :hoop_count %>

    <%= f.label :setting %>
    <%= f.select(:setting,
        ['Outdoor without lights', 'Outdoor with lights', 'Indoor']) %>

    <%= f.label :hours,
    "Hours of Operation (if outdoor, include when lights go out)" %>
    <%= f.text_field :hours, placeholder: "Optional" %>

    <%= f.submit "Add Court", id: "show-map-button", class: "button" %>

  <% end %>

  <div id="map-and-button" class="" hidden>
    <br>
    <h5>Click on the map to pinpoint the court's exact location!</h5>
    <br>
    <div id="createMap" style="width:300px;height:300px;"></div>
    <br>

    <div id="map-buttons" hidden>
      <%= link_to "Submit", "#",
          id: "submit-court-button",
          class: "button success tiny"%>
    </div>

  </div>
</div>
