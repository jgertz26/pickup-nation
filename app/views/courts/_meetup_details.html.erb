<% unless meetup.description == "" || meetup.description.nil? %>
  <br>Details: <%= meetup.description %>
<% end %>

  <br> Total attendees: <%= meetup.attendees.length %>
<% unless meetup.condition.nil? %>
  <br>Updates: <%= meetup.condition %>
  <em> - <%= time_ago_in_words(meetup.updated_at) %> ago</em>
<% end %>

<% if current_user %>
  <% if current_user.creator?(meetup) %>
    <br>
    <%= link_to "Provide update",
        edit_court_meetup_path(@court, meetup) %>
  <% end %>

  <% if current_user.creator?(meetup) || current_user.admin %>
    - <%= link_to "Delete meetup",
        court_meetup_path(@court, meetup), method: :delete %>
  <% end %>

  <% attendee = Attendee.find_by(meetup: meetup, user: current_user) %>
  <% if attendee.nil? %>
    <%= link_to "Join Meetup",
        meetup_attendees_path(meetup),
        method: :post,
        class: "join-button button success",
        id: "join-#{meetup.id}" %>
  <% else %>
    <%= link_to "Leave Meetup",
        meetup_attendee_path(meetup, attendee),
        method: :delete,
        class: "join-button button alert",
        id: "join-#{meetup.id}" %>
  <% end %>
<% end %>
