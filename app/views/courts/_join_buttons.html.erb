<% if current_user %>
  <% attendee = Attendee.find_by(meetup: meetup, user: current_user) %>
  <% if attendee.nil? %>
    <%= link_to "Join Game",
        meetup_attendees_path(meetup),
        method: :post,
        class: "join-button button success tiny",
        id: "join-#{meetup.id}" %>
  <% else %>
    <%= link_to "Leave Game",
        meetup_attendee_path(meetup, attendee),
        method: :delete,
        class: "join-button button alert tiny",
        id: "join-#{meetup.id}" %>
  <% end %>
<% end %>
