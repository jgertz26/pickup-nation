<div id="page-content" class="small-12-centered medium-8-centered columns">
  <h1>Edit Court</h1>

  <%= form_for @court do |f| %>

    <%= f.label :name, "Name of court" %>
    <%= f.text_field :name %>

    <%= f.label :street_address %>
    <%= f.text_field :street_address %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :zip, "Zip Code" %>
    <%= f.text_field :zip %>

    <%= f.label :hoop_count, "Number of hoops" %>
    <%= f.text_field :hoop_count %>

    <%= f.label :setting %>
    <%= f.select(:setting,
    ['Outdoor without lights', 'Outdoor with lights', 'Indoor']) %>

    <%= f.label :hours,
    "Hours of Operation (if outdoor, include when lights go out)" %>
    <%= f.text_field :hours, placeholder: "Optional" %><br>

    <%= f.submit "Update Court" %>

  <% end %>

  <% if current_user.admin %>
    <%= link_to "Delete Court", court_path(@court), method: :delete  %>
  <% end %>
</div>
