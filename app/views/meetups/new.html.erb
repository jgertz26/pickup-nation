<div class="page-content small-11 small-centered columns">

  <h2>Schedule a game at <%= @court.name %></h2>
  <%= form_for [@court, @meetup] do |f| %>

    <%= f.label :start_time %>
    <%= f.datetime_select :start_time,
                          { ampm: true, minute_step: 15,
                          start_year: Time.now.year,
                          end_year: (Time.now.year + 1),
                          start_hour: 6,
                          end_hour: 22,
                          default: Time.now }
                          %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit ("Schedule Game")%>
  <% end %>

</div>
