<div class="page-content small-11 small-centered columns">

  <h2> <%= @user.username %> </h2>

  <div class="row">
    <div class="show-info-left small-12 small-centered medium-4 medium-uncentered columns">

      <div class="profile-photo">
        <%= image_tag "#{current_user.avatar}" %>
      </div>

      <div class="profile-info">
        Meetups attended: <%= @user.attendees.length %>

      </div>

    </div>

    <div class="small-12 medium-8 columns">
      <h4> <%= @user.username %>'s Games</h4>
      <% @user.meetups.each do |meetup| %>
        <div class="">
          <%= link_to meetup.court.name, court_path(meetup.court) %> at
          <%= meetup.start_time.strftime('%a. %m/%d, %l:%M %P') %> <br>
        </div>
      <% end %>
    </div>

  </div>

</div>
