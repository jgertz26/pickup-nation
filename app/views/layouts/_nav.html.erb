<div class="contain-to-grid navigation-bar">
  <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">Pickup Nation</a></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <li><%= link_to "Add New Court", new_court_path %></li>
        <li class="has-dropdown">
          <%- if current_user -%>
            <a href="#">
              Signed in as <%= current_user.username %>
              <%= image_tag "#{current_user.avatar}", class: "user-avatar" %>
            </a>
            <ul class="dropdown">
              <% if current_user.admin %>
                <li class="admin-info">Administrator</li>
              <% end %>
              <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
              <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
            </ul>
          <%- else -%>
            <%= link_to 'Sign In', new_user_session_path %>
            <ul class="dropdown">
              <li><%= link_to 'Or Sign Up!', new_user_registration_path %></li>
            </ul>
          <%- end -%>
        </li>
      </ul>
    </section>
  </nav>
</div>
