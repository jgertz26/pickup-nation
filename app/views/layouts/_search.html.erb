<%= form_tag(courts_path, :method => "get") do %>
  <div id="search-container">

    <div class="search-item">
      <div class="search-label">
        <label>Show courts within</label>
      </div>
      <div class="search-form">
        <%= select_tag :range,
            options_for_select([5, 10, 15, 20], @range),
            id: "range-box" %>
      </div>
    </div>

    <div class="search-item">
      <div class="search-label">
        <label>miles of</label>
      </div>
      <div class="search-form ">
        <%= text_field_tag :location,
            params[:location],
            id: "location-box",
            value: @query_location,
            placeholder: "Location",
            required: true %>
      </div>
    </div>

    <div class="search-item">
      <button id="search-button" class="radius">Discover!</button>
    </div>

  </div>
<% end %>
